---
import { ViewTransitions } from 'astro:transitions'
import { Cloudinary } from '@cloudinary/url-gen'
import '~/styles/global.css'

interface Props {
  title?: string
  description?: string
  image?: string
}

const imageURL = new Cloudinary({
  cloud: { cloudName: import.meta.env.CLOUDINARY_CLOUD_NAME }
})
  .image(Astro.props.image ?? 'open_graph_image')
  .createCloudinaryURL()

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
const { title = 'Patchouli', description } = Astro.props
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <link rel="canonical" href={canonicalURL} />
  <meta name="description" content={description} />
  <meta name="title" content={title} />
  <title>{title}</title>
  <link
    rel="icon"
    type="image/svg+xml"
    href={`${import.meta.env.BASE_URL}/favicon.svg`}
  />

  <!-- Fonts -->
  <link
    rel="preload"
    href={`${import.meta.env.BASE_URL}/fonts/GeistVF.woff2`}
    as="font"
    type="font/woff2"
    crossorigin
  />
  <link
    rel="preload"
    href={`${import.meta.env.BASE_URL}/fonts/GeistMonoVF.woff2`}
    as="font"
    type="font/woff2"
    crossorigin
  />

  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={imageURL} />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={Astro.url} />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={imageURL} />

  <!-- rss feed -->
  <link
    rel="alternate"
    type="application/rss+xml"
    title="Your Site's Title"
    href={new URL(
      `${import.meta.env.BASE_URL}/chronicles/rss.xml`,
      Astro.site
    )}
  />

  <!-- Scripts -->
  <ViewTransitions />

  <slot />
</head>
